{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Shopping Cart",
  "description": "E-commerce shopping cart with items and discounts",
  "type": "object",
  "properties": {
    "cart_id": {
      "type": "string",
      "description": "Unique cart identifier"
    },
    "user_id": {
      "type": "string",
      "description": "User who owns the cart"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "product_id": {"type": "string"},
          "product_name": {"type": "string"},
          "quantity": {"type": "integer", "minimum": 1},
          "price": {"type": "number", "minimum": 0},
          "discount_percentage": {"type": "number", "minimum": 0, "maximum": 100}
        },
        "required": ["product_id", "product_name", "quantity", "price"]
      },
      "minItems": 1
    },
    "subtotal": {
      "type": "number",
      "minimum": 0
    },
    "shipping_cost": {
      "type": "number",
      "minimum": 0
    },
    "tax": {
      "type": "number",
      "minimum": 0
    },
    "total": {
      "type": "number",
      "minimum": 0
    },
    "coupon_code": {
      "type": "string",
      "description": "Applied coupon code"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["cart_id", "user_id", "items", "total"],
  "additionalProperties": false
}
