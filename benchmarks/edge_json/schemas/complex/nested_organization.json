{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nested Organization Hierarchy",
  "description": "Company organizational structure with departments, teams, and members",
  "type": "object",
  "properties": {
    "company_id": {
      "type": "string"
    },
    "company_name": {
      "type": "string"
    },
    "founded_date": {
      "type": "string",
      "format": "date"
    },
    "headquarters": {
      "type": "object",
      "properties": {
        "address": {
          "type": "object",
          "properties": {
            "street": {"type": "string"},
            "city": {"type": "string"},
            "state": {"type": "string"},
            "country": {"type": "string"},
            "postal_code": {"type": "string"}
          }
        },
        "phone": {"type": "string"},
        "timezone": {"type": "string"}
      }
    },
    "departments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "department_id": {"type": "string"},
          "department_name": {"type": "string"},
          "head": {
            "type": "object",
            "properties": {
              "employee_id": {"type": "string"},
              "name": {"type": "string"},
              "email": {"type": "string", "format": "email"},
              "title": {"type": "string"}
            }
          },
          "budget": {"type": "number"},
          "teams": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "team_id": {"type": "string"},
                "team_name": {"type": "string"},
                "team_lead": {
                  "type": "object",
                  "properties": {
                    "employee_id": {"type": "string"},
                    "name": {"type": "string"},
                    "email": {"type": "string", "format": "email"}
                  }
                },
                "members": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "employee_id": {"type": "string"},
                      "name": {"type": "string"},
                      "email": {"type": "string", "format": "email"},
                      "role": {"type": "string"},
                      "start_date": {"type": "string", "format": "date"},
                      "skills": {"type": "array", "items": {"type": "string"}},
                      "projects": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "project_id": {"type": "string"},
                            "project_name": {"type": "string"},
                            "role_in_project": {"type": "string"},
                            "allocation_percentage": {"type": "number", "minimum": 0, "maximum": 100}
                          }
                        }
                      }
                    },
                    "required": ["employee_id", "name", "email", "role"]
                  }
                },
                "focus_areas": {"type": "array", "items": {"type": "string"}}
              }
            }
          }
        },
        "required": ["department_id", "department_name"]
      }
    },
    "total_employees": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": ["company_id", "company_name", "departments"],
  "additionalProperties": false
}
